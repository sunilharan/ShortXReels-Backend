{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "moduleResolution": "node",              
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true,                    
    "resolveJsonModule": true,               
    "types": ["node"]                        
  },
  "include": ["src", "seed.js"],
  "exclude": ["node_modules", "dist"]
}
